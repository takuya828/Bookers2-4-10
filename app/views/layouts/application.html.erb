<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/3ae139fc0d.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <% if user_signed_in? %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <div class="navbar-nav mr-auto">
          <a class="navbar-brand" href="/">
           <span>Bookers</span>
          </a>
         </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li>
           <div class="mx-3">
            <a class="fas fa-home" href="/" style="color:white;">Home</a>
            <%= link_to 'Home', user_path(current_user.id), class: 'fas fa-home' %>
           </div>
            </li>
            <li>
             <div class="mx-3">
              <a class="fas fa-users" href="/users" style="color:white;">Users</a>
               <%= link_to 'Users', users_path, class: 'fas fa-users' %>
             </div>
            </li>
            <li>
             <div class="mx-3">
              <a class="fas fa-book-open" href="/books" style="color:white;">Books</a>
             </div>
            </li>
            <li>
             <div class="mx-3">
              <%= link_to "logout", destroy_user_session_path, method: :delete %>
              <a class="fas fa-sign-in-alt" href="/" method:delete style="color:white;">logout</a>
             </div>
            </li>
          </ul>
         </div>
         </div>
      </nav>
      <% else %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <div class="navbar-nav mr-auto">
          <a class="navbar-brand" href="/">
           <span>Bookers</span>
          </a>
         </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
       <ul class="navbar-nav ml-auto">
        <li>
         <div class="mx-3">
          <a class="fas fa-home" href="/" style="color:white;">Home</a>
         </div>
        </li>
        <li>
         <div class="mx-3">
          <a class="fas fa-link" href="/about" style="color:white;">About</a>
         </div>
        </li>
        <li>
         <div class="mx-3">
           <a class="fas fa-user-plus" href="/users/sign_up" style="color:white;">sign up</a>
         </div>
        </li>
        <li>
         <div class="mx-3">
          <a class="fas fa-sign-in-alt" href="/users/sign_in" style="color:white;">login</a>
         </div>
        </li>
       </ul>
      </div>
     </div>
      </nav>
    </header>
    <% end %>

    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

    <%= yield %>
      <footer>
       <div class="container mt-5">
        <div class="row">
         <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
         </div>
        </div>
       </div>
      </footer>
  </body>
</html>
