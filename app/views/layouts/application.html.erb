<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/3ae139fc0d.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
        <div class="navbar-nav mr-auto">
         <a class="navbar-brand" href="/">
          <span>Bookers</span>
         </a>
        </div>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>
       <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
         <li>
          <div class="mx-3">
           <%= link_to user_path(current_user), :style =>"color:white;" do %>
            <i class="fas fa-home">Home</i>
           <% end %>
          </div>
         </li>
         <li>
          <div class="mx-3">
           <%= link_to users_path,:style =>"color:white;" do %>
            <i class="fas fa-users">Users</i>
           <% end %>
          </div>
         </li>
         <li>
          <div class="mx-3">
           <%= link_to books_path,:style =>"color:white;" do %>
            <i class="fas fa-book-open">Books</i>
           <% end %>
          </div>
         </li>
         <li>
          <div class="mx-3">
           <%= link_to destroy_user_session_path,:style =>"color:white;", method: :delete do %>
            <i class="fas fa-sign-out-alt">logout</i>
           <% end %>
          </div>
         </li>
        </ul>
       </div>
      </div>
     </nav>
      <% else %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <div class="navbar-nav mr-auto">
          <a class="navbar-brand" href="/">
           <span>Bookers</span>
          </a>
         </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
       <ul class="navbar-nav ml-auto">
        <li>
         <div class="mx-3">
          <%= link_to root_path,:style =>"color:white;" do %>
          <i class="fas fa-home">Home</i>
               <% end %>
         </div>
        </li>
        <li>
         <div class="mx-3">
          <%= link_to about_path,:style =>"color:white;" do %>
          <i class="fas fa-link">About</i>
               <% end %>
         </div>
        </li>
        <li>
         <div class="mx-3">
           <%= link_to new_user_registration_path,:style =>"color:white;" do %>
          <i class="fas fa-user-plus">sign up</i>
               <% end %>
         </div>
        </li>
        <li>
         <div class="mx-3">
          <%= link_to user_session_path,:style =>"color:white;" do %>
          <i class="fas fa-sign-in-alt">login</i>
               <% end %>
         </div>
        </li>
       </ul>
      </div>
     </div>
    </nav>
   </header>
  <% end %>

    <% flash.each do |key, value| %>
     <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <%= yield %>
     <footer>
      <div class="fixed-bottom">
       <div class="container mt-5">
        <div class="row">
         <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
          </div>
         </div>
        </div>
       </div>
      </footer>
  </body>
</html>
