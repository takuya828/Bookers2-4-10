<div class="post-body">
  <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>
  <p>Name：<%= @book.user.name %></p>
  <p>投稿日時：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book.user == current_user %>
    <%= link_to "Delete", book_path(@book), method: :delete, "data-confirm" => "Are you sure？" %>
    <%= link_to "Edit", edit_book_path(@book) %>
  <% end %>
</div>