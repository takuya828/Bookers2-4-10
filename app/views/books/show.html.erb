<body>
 <div class="container">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
     <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
      <table class="table">
       <p class="profile-name">name: <%= @user.name %></p>
       <p class="introduction">introduction: <%= @user.introduction %></p>
       <% if @user.id == current_user.id %>
       <p><%= link_to "Edit", edit_user_path(@user) %></p>
       <% end %>
      </table>
    <h1>New Book</h1>
    <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create book' %>
   <% end %>
  </div>
   <div class="col-md-8 offset-md-1">
    <table class="table table-hover">
     <thead>
      <tr>
       <th scope="col">Book detail</th>
      </tr>
     </thead>
    <tbody>
     <tr>
      <th scope="row"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></th>
       <td><%= link_to @book.title, book_path(@book) %></td>
       <td><%= @book.body %></td>
      <% if @user.id == current_user.id %>
       <td><%= link_to "Edit", edit_book_path(@book) %></td>
       <td><%= link_to "Delete", book_path(@book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      <% end %>
     </tr>
    </tbody>
   </div>
  </div>
 </div>
 </body>