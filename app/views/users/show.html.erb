<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
<%= render 'users/list', users: @users %>
  <h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<table class="table table-hover">
  <thead>
    <tr>
      <h2>Books</h2>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
     <% @books.each do |book| %>
      <th scope="row"><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"), user_path(book.user) %>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
   </div>
  </div>
 </div>
</main>