<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></p>
        <table class="table">
          <p class="profile-name">name: <%= @user.name %></p>
          <p class="introduction">introduction: <%= @user.introduction %></p>
           <% if @user.id == current_user.id %>
            <p><%= link_to "Edit", edit_user_path(@user) %></p>
           <% end %>
        </table>
          <h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create book' %>
<% end %>
</div>

<div class="col-md-9">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
      <th scope="row"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></th>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
   </div>
  </div>
 </div>
</main>